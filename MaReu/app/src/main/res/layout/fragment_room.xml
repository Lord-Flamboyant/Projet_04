<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Room.RoomFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="62dp">

        <ImageView
            android:id="@+id/Pastille"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:background="#E1AFAF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_launcher_foreground"
            tools:src="@color/purple_200"
            tools:srcCompat="@android:drawable/ic_dialog_info" />

        <TextView
            android:id="@+id/Name_Meeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="39dp"
            android:text="rÃ©union"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/Pastille"
            app:layout_constraintStart_toEndOf="@+id/Pastille"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Trait2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text=" - "
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/Name_Meeting"
            app:layout_constraintStart_toEndOf="@+id/Name_Meeting"
            app:layout_constraintTop_toTopOf="@+id/Name_Meeting" />


        <TextView
            android:id="@+id/Date_Meeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="14h30 "
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/Trait2"
            app:layout_constraintStart_toEndOf="@+id/Trait2"
            app:layout_constraintTop_toTopOf="@+id/Trait2" />

        <TextView
            android:id="@+id/Trait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text=" - "
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/Date_Meeting"
            app:layout_constraintStart_toEndOf="@+id/Date_Meeting"
            app:layout_constraintTop_toTopOf="@+id/Date_Meeting" />

        <TextView
            android:id="@+id/Mail_employer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:text="brigitte@jebosse.com"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/Pastille"
            app:layout_constraintStart_toEndOf="@+id/Pastille"
            app:layout_constraintTop_toBottomOf="@+id/Name_Meeting" />

        <ImageButton
            android:id="@+id/Trash_can"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="2dp"
            android:backgroundTint="#00FFFFFF"
            android:src="@android:drawable/ic_menu_delete"
            android:tint="#000000"
            app:layout_constraintBottom_toBottomOf="@+id/Pastille"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="Tokyo"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/Trait"
            app:layout_constraintStart_toEndOf="@+id/Trait"
            app:layout_constraintTop_toTopOf="@+id/Trait" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>